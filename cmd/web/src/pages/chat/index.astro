---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Chat">
    <div class="border-2 border-slate-700 w-1/2 mx-auto my-10 rounded overflow-hidden">
        <label class="font-bold pl-1" for="chat-title">Chat title</label>
        <ul class="bg-amber-100 h-[60vh] flex flex-col p-1 overflow-auto">
            <li>message 1</li>
            <li>message 2</li>
            <li>message 3</li>
        </ul>
        <div class="flex p-1">
            <input class="w-full" placeholder="type message..." type="text">
            <button class="font-bold">send</button>
        </div>
    </div>
</Layout>
