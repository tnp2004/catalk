---
import { Image } from 'astro:assets'
import { CamelToWords } from '../utils/convertStringFormat'

interface Props {
	breed: string
}

const { breed } = Astro.props
---

<li class="border-4 border-slate-700 hover:border-dashed shadow-md w-44 h-max rounded text-center text-slate-800 bg-amber-100 hover:bg-amber-200 hover:cursor-pointer m-1">
	<a href=`/cats/${breed}/chat`>
		<label class="font-bold block bg-amber-200 bg-opacity-50" for="name">{CamelToWords(breed)}</label>
		<Image class="w-1/2 mx-auto p-1" src=`/catsIcon/${breed}.png` alt="cat-img" width={56} height={56} />
	</a>
</li>